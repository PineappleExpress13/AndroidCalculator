<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculadora"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pineapple.calculadora.Calculadora"
    android:weightSum="1"
    android:background="@android:color/holo_purple">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="bottom|right"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:background="@color/colorPrimary" />

    <Button
        android:text="7"
        android:layout_width="80dp"
        android:id="@+id/button7"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="110dp" />

    <Button
        android:text="4"
        android:layout_width="80dp"
        android:id="@+id/button4"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="110dp" />

    <Button
        android:text="."
        android:layout_width="80dp"
        android:id="@+id/buttonpunto"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="100dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="1"
        android:layout_width="80dp"
        android:id="@+id/button1"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="110dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="8"
        android:layout_width="80dp"
        android:id="@+id/button8"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="110dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:text="5"
        android:layout_width="80dp"
        android:id="@+id/button5"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="110dp"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:text="2"
        android:layout_width="80dp"
        android:id="@+id/button2"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="110dp"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:text="0"
        android:layout_width="80dp"
        android:id="@+id/button0"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="110dp"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/buttonpunto"
        android:layout_toEndOf="@+id/buttonpunto" />

    <Button
        android:text="9"
        android:layout_width="80dp"
        android:id="@+id/button9"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="110dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:text="6"
        android:layout_width="80dp"
        android:id="@+id/button6"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="110dp"
        android:layout_below="@+id/button9"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:text="3"
        android:layout_width="80dp"
        android:id="@+id/button3"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="110dp"
        android:layout_below="@+id/button6"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:text="="
        android:layout_width="80dp"
        android:id="@+id/buttonresultado"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="110dp"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="bottom|right"
        android:textColor="@android:color/background_dark"
        android:textSize="26dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="C"
        android:layout_width="57dp"
        android:id="@+id/button40"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/button9"
        android:layout_height="90dp" />

    <Button
        android:text="-"
        android:layout_width="58dp"
        android:id="@+id/button43"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="90dp"
        android:layout_below="@+id/button41"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:text="x"
        android:layout_width="58dp"
        android:id="@+id/button45"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="90dp"
        android:layout_below="@+id/button44"
        android:layout_toRightOf="@+id/buttonresultado"
        android:layout_toEndOf="@+id/buttonresultado" />

    <Button
        android:text="← "
        android:layout_width="55dp"
        android:id="@+id/button46"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="90dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="exp"
        android:layout_width="57dp"
        android:id="@+id/button47"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="90dp"
        android:layout_below="@+id/button46"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="+"
        android:layout_width="55dp"
        android:id="@+id/button41"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="90dp"
        android:layout_below="@+id/button40"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:text="±"
        android:layout_width="55dp"
        android:id="@+id/button49"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="90dp"
        android:layout_below="@+id/button47"
        android:layout_toRightOf="@+id/button43"
        android:layout_toEndOf="@+id/button43" />

    <Button
        android:text="√"
        android:layout_width="55dp"
        android:id="@+id/button50"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="90dp"
        android:layout_below="@+id/button44"
        android:layout_toRightOf="@+id/button45"
        android:layout_toEndOf="@+id/button45" />

    <Button
        android:text="÷"
        android:layout_width="58dp"
        android:id="@+id/button44"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="90dp"
        android:layout_below="@+id/button43"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:text="1/x"
        android:layout_width="58dp"
        android:id="@+id/button48"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="90dp"
        android:layout_below="@+id/button49"
        android:layout_toRightOf="@+id/button43"
        android:layout_toEndOf="@+id/button43" />

</RelativeLayout>
